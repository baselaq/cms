{
  "name": "cms-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:mobile": "pnpm --filter mobile start",
    "dev:all": "pnpm --parallel --filter '{web,backend,mobile}' dev",
    "build": "pnpm --filter web build",
    "build:web": "pnpm --filter web build",
    "build:backend": "pnpm --filter backend build",
    "build:all": "pnpm --filter '{web,backend,mobile}' build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "validate:kebab": "node ./scripts/validate-kebab-case.mjs",
    "validate:naming": "node ./scripts/validate-ts-naming.mjs",
    "validate:protected": "bash ./scripts/validate-protected-files.sh",
    "validate:imports": "node ./scripts/validate-relative-imports.mjs",
    "validate:duplicates": "node ./scripts/validate-duplicate-types.mjs",
    "validate": "pnpm lint && pnpm typecheck && pnpm validate:kebab && pnpm validate:naming && pnpm validate:protected && pnpm validate:imports && pnpm validate:duplicates",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.39.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.0.0",
    "typescript": "^5"
  }
}
